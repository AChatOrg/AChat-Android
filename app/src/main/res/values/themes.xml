<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AChat.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Font. -->
        <item name="android:fontFamily">@font/iran_sans_regular</item>
        <item name="android:lineSpacingMultiplier">0.93</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <!-- application theme. -->
    <style name="Theme.AChat" parent="Theme.AChat.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#f00</item>
        <item name="colorSecondaryVariant">#0f0</item>
        <item name="colorOnSecondary">#00f</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Text color. -->
        <item name="android:textColor">@android:color/black</item>
        <item name="linkColor">@color/link</item>
    </style>
</resources>