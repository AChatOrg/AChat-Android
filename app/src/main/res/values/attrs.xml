<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="linkColor" format="color" />

    <declare-styleable name="GroupAvatarView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="placeholderCircle" format="reference" />
    </declare-styleable>

    <attr name="emojiSize" format="dimension" />

    <declare-styleable name="AXEmojiEditText">
        <attr name="emojiSize" />
    </declare-styleable>

    <declare-styleable name="AXEmojiTextView">
        <attr name="emojiSize" />
    </declare-styleable>

    <declare-styleable name="AXEmojiButton">
        <attr name="emojiSize" />
    </declare-styleable>

    <declare-styleable name="AXEmojiMultiAutoCompleteTextView">
        <attr name="emojiSize" />
    </declare-styleable>

    <declare-styleable name="AXEmojiCheckbox">
        <attr name="emojiSize" />
    </declare-styleable>

    <declare-styleable name="AXEmojiRadioButton">
        <attr name="emojiSize" />
    </declare-styleable>

    <declare-styleable name="LikeButton">
        <attr name="icon_size" format="dimension|reference" />
        <attr name="like_drawable" format="reference" />
        <attr name="unlike_drawable" format="reference" />
        <attr name="dots_primary_color" format="color|reference" />
        <attr name="dots_secondary_color" format="color|reference" />
        <attr name="liked" format="boolean" />
        <attr name="is_enabled" format="boolean" />
        <attr name="anim_scale_factor" format="float" />
    </declare-styleable>
</resources>